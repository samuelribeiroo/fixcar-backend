{
  "formatter": {
    "lineWidth": 80,
    "indentStyle": "space",
    "indentSize": 2,
    "trailingComma": "none"
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
